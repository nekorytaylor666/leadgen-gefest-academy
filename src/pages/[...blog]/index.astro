---
import merge from 'lodash.merge';
import type { ImageMetadata } from 'astro';
import Layout from '~/layouts/PageLayout.astro';
import SinglePost from '~/components/blog/SinglePost.astro';
import ToBlogLink from '~/components/blog/ToBlogLink.astro';

import { getCanonical, getPermalink } from '~/utils/permalinks';
import { getStaticPathsBlogPost, blogPostRobots } from '~/utils/blog';
import { findImage } from '~/utils/images';

export const prerender = true;

export async function getStaticPaths() {
  return await getStaticPathsBlogPost();
}

const { post } = Astro.props;

const url = getCanonical(getPermalink(post.permalink, 'post'));
const image = (await findImage(post.image)) as ImageMetadata | undefined;

const metadata = merge(
  {
    title: post.title,
    description: post.excerpt,
    robots: {
      index: blogPostRobots?.index,
      follow: blogPostRobots?.follow,
    },
    openGraph: {
      type: 'article',
      ...(image ? { images: [{ url: image, width: image?.width, height: image?.height }] } : {}),
    },
  },
  { ...(post?.metadata ? { ...post.metadata, canonical: post.metadata?.canonical || url } : {}) }
);
---

<Layout
  metadata={metadata}
  actions={[
    {
      variant: 'secondary',
      text: 'Записаться на вебинар',
      href: 'https://start.bizon365.ru/room/161173/647829?mcp_token=eyJwaWQiOjgxOTUzMCwic2lkIjoxMTY5NTczMTMwLCJheCI6IjBmMjk1YzE1YWQyZmY4ZmNjMDVkNjAxNDM5NDkwYWE2IiwidHMiOjE2OTkyMDA5MzQsImV4cCI6MTcwMTYyMDEzNH0.hFrIDTbJClwevU4rYTxIN-gyF3EE7qvrDHAbau410As',
      target: '_blank',
      icon: 'tabler:check',
    },
  ]}
>
  <SinglePost post={{ ...post, image: image }} url={url} />
  <ToBlogLink />
</Layout>
